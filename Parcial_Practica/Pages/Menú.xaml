<Page x:Class="Parcial_Practica.Pages.Menú"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Parcial_Practica.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF2F2F3C" Offset="0.92"/>
                <GradientStop Color="#FF6A6EB0" Offset="0.103"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="First Fantasy" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="78" Width="180" FontFamily="Gabriola" FontSize="40" FontWeight="Bold" Foreground="#FF33306A" />
        <Image x:Name="imgClase" HorizontalAlignment="Left" Height="186" Margin="477,0,0,0" VerticalAlignment="Center" Width="148" Source="/Pages/Guerrero.png" Stretch="Fill"/>
        <Label Content="Seleccion de personaje" HorizontalAlignment="Left" Margin="26,88,0,0" VerticalAlignment="Top" FontSize="20" FontFamily="Gabriola"/>
        <Button x:Name="btnLeft" Content="◄" HorizontalAlignment="Left" Margin="30,178,0,0" VerticalAlignment="Top" Click="btnLeft_Click" Height="23" Width="20" FontSize="16"/>
        <Button x:Name="btnRight" Content="►" HorizontalAlignment="Left" Margin="150,178,0,0" VerticalAlignment="Top" Click="btnRight_Click" Height="23" Width="21" FontSize="16"/>
        <Label x:Name="txtPersonaje" Content="Guerrero" HorizontalAlignment="Left" Margin="71,175,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnMenu" Content="Menú" HorizontalAlignment="Left" Margin="30,360,0,0" VerticalAlignment="Top" Click="btnMenu_Click"/>
        <Image x:Name="imgClase1" HorizontalAlignment="Left" Height="186" Margin="477,0,0,0" VerticalAlignment="Center" Width="148" Source="/Pages/Escueladedestruccion.png" Visibility="Hidden" Stretch="Fill"/>
        <Image x:Name="imgClase2" HorizontalAlignment="Left" Height="186" Margin="477,0,0,0" VerticalAlignment="Center" Width="148" Source="/Pages/Encantador.png" Visibility="Hidden" Stretch="Fill"/>
        <Rectangle HorizontalAlignment="Left" Height="393" Margin="10,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="198"/>
        <TextBlock x:Name="txtDescripcion" HorizontalAlignment="Left" Margin="236,101,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="89" Width="164"/>
        <Label Content="Descripción:" HorizontalAlignment="Left" Margin="236,75,0,0" VerticalAlignment="Top"/>
        <Rectangle HorizontalAlignment="Left" Height="115" Margin="236,75,0,0" Stroke="Black" VerticalAlignment="Top" Width="164"/>

    </Grid>
</Page>
